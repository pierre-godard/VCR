<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.insa_lyon.vcr.vcr.GoogleMapFragment"
    android:id="@+id/container">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <Button
        android:id="@+id/but_recherche"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="left|top"
        android:text="@string/Recherche"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="#bbffffff"
        android:onClick="onButtonClickedMain"
        android:nestedScrollingEnabled="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="vertical">


        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@color/material_blue_grey_900"
            android:id="@+id/seekBar"
            android:layout_gravity="center_horizontal|bottom" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchDeposerRetirer"
            android:checked="false"
            android:textOn="Déposer un vélo"
            android:textOff="Retirer un vélo"
            style="@android:style/Widget.Holo.Button.Toggle" />
    </LinearLayout>


</FrameLayout>


